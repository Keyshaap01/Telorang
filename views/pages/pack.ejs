<div class="container">
    <h4 style="color:#EB6440 ;">Data Pack</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(pack=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-3">
                        <small style="color: #EB6440;">Nama Pack</small>
                        <br />
                        <%= pack.nama_pack %>
                    </div>
                    <div class="col-lg-3">
                        <small class="text-info">Harga</small> <br />
                        Rp <%= pack.harga %>
                    </div>
                    <div class="col-lg-3">
                        <small class="text-info">Action</small>
                        <br />
                        <!-- button edit -->
                        <a href="/pack/edit/<%= pack.id %>">
                            <button class="btn" style="background-color: #FD841F; color: white;">
                                Edit
                            </button>
                        </a>
                        <!-- button delete -->
                        <a href="/pack/delete/<%= pack.id %>" onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>
                    </div>
                </div>
            </li>
            <% }) %>
    </ul>
    <!-- button add new data -->
    <a href="/pack/add">
        <button class="btn" style="background-color:#393E46  ;color: aliceblue;">
            Tambah Data
        </button>
    </a>
</div>