<div class="container" >
    <h4 style=" color: #EB6440"  >Data Telor</h4>
    <hr>
    <ul class="list-group my-2"  >
        <% data.forEach(telur=> { %>
                       <!-- telur wadah/manampung data foreach -->
            <li class="list-group-item " >
                <div class="row">
                    <div class="col-lg-3">
                        <small style="color: #EB6440;">Jenis Telur</small>
                        <br />
                        <%= telur.jenis_telur %>
                    </div>
                    <div class="col-lg-3">
                        <small class="text-info">Stok</small> <br />
                        <%= telur.stok %>
                    </div>
                    <div class="col-lg-3">
                        <small class="text-info">Harga</small> <br />
                        Rp <%= telur.harga %>
                    </div>
                    <div class="col-lg-3">
                        <small class="text-info">Action</small>
                        <br />
                        <!-- button edit -->
                        <a href="/telur/edit/<%= telur.id %>">
                            <button class="btn" style="background-color:#FD841F;color: white">
                                Edit
                            </button>
                        </a>
                        <!-- button delete -->
                        <a href="/telur/delete/<%= telur.id %>" onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>
                    </div>
                </div>
            </li>
            <% }) %>
    </ul>
    <!-- button add new data -->
    <a href="/telur/add">
        <button class="btn " style="background-color:#393E46 ; color: white;">
            Tambah Data
        </button>
    </a>
</div>