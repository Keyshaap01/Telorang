<div class="container">
    <h4 style="color:#EB6440 ;">Data Admin</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(admin=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-3">
                        <small style="color: #EB6440;">Nama Admin</small>
                        <br />
                        <%= admin.nama_admin %>
                    </div>
                    <div class="col-lg-3">
                        <small class="text-info">Username</small> <br />
                      <%= admin.username %>
                    </div>
                    <div class="col-lg-4">
                        <small class="text-info">Password</small> <br />
                      <%= admin.password %>
                    </div>
                    <div class="col-lg-2">
                        <small class="text-info">Action</small>
                        <br />
                        <!-- button edit -->
                        <a href="/admin/edit/<%= admin.id %>">
                            <button class="btn" style="background-color:#FD841F ; color:white">
                                Edit
                            </button>
                        </a>
                        <!-- button delete -->
                        <a href="/admin/delete/<%= admin.id %>" onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>
                    </div>
                </div>
            </li>
            <% }) %>
    </ul>
    <!-- button add new data -->
    <a href="/admin/add">
        <button class="btn " style="background-color:#393E46 ; color:white;">
            Tambah Data
        </button>
    </a>
</div>